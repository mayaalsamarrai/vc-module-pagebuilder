<module>
  <id>VirtoCommerce.PageBuilderModule</id>
  <version>1.0.13</version>
  <platformVersion>2.13.20</platformVersion>
  <dependencies>
    <dependency id="VirtoCommerce.Core" version="2.24.6" />
    <dependency id="VirtoCommerce.Content" version="2.13.24" />
  </dependencies>

  <title>CMS Page Builder</title>
  <description>Compose pages in visual page builder.</description>
  <authors>
    <author>Virto Commerce</author>
  </authors>
  <owners>
    <owner>Virto Commerce</owner>
  </owners>
  
