  <styles></styles>
  <scripts>
    <directory virtualPath="$/Scripts" searchPattern="*.js" searchSubdirectories="true" />
  </scripts>

  <settings>
    <group name="CMS Content|General">
      <setting>
        <name>VirtoCommerce.PageBuilderModule.General.StorePreviewPath</name>
        <valueType>string</valueType>
        <defaultValue>/designer-preview</defaultValue>
        <title>Store preview path</title>
        <description>Relative path for preview page</description>
      </setting>
      <setting>
        <name>VirtoCommerce.PageBuilderModule.General.TokenUrl</name>
        <valueType>string</valueType>
        <defaultValue>/token</defaultValue>
        <title>AuthToken url</title>
        <description></description>
      </setting>
      <setting>
        <name>VirtoCommerce.PageBuilderModule.General.AssetsPath</name>
        <valueType>string</valueType>
        <defaultValue>assets/pages</defaultValue>
        <title>Assets relative path</title>
        <description></description>
      </setting>
    </group>
  </settings>
